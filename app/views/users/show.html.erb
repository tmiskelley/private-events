<h1><%= current_user.username %> Events</h1>

<hr><br>

<h2>Created Events</h2>

<% @created_events.each do |event| %>
  <div style="padding-left: 1rem; border: 1px solid black;">
    <h2><%= event.event_name %></h2>
    <%= link_to 'Show details', event_path(event) %><br><br>
    <%= button_to 'Delete Event', event_path(event), method: :delete, data: { turbo_confirm: 'Are you sure you want to delete this event?' } %><br>
  </div>
<% end %>

<br><%= link_to 'Create new event', new_event_path %><br><br>

<h2>Saved Events</h2>

<%= render partial: 'shared/event_partial' %>
